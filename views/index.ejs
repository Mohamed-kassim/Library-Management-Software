<% include partials/header %>

<form action="/books/search" method="POST">
	<div class="input-group mb-3">
	  <input type="text" class="form-control" name="name" placeholder="Book name" aria-label="search">
	  <div class="input-group-append">
	    <button class="btn btn-outline-secondary" type="submit">Search</button>
	  </div>
	</div>
</form>	
<div class="row">
	<div class="col-9">
		<div class="row" >
			<% let x = 1; %>
			<% books.forEach(function(book){ %>
				<div class="col col-4 d-flex justify-content-center text-center">
						<div class="card mb-3" style="width: 17rem;">
							<img class="card-img-top" src="/imgs/bg33.jpg" alt="Card image cap">
							<div class="card-body">
								<h5 class="card-title"><%= book.name %></h5>
								<p class="card-text"><%= book.description %></p>
								<a href="#" class="btn btn-primary">View book</a>
							</div>
						</div>
				</div>
			<% x=x+1; }); %>
		</div>
	</div>
	<div class="col-3">
		<div class="list-group">
		<a class="list-group-item list-group-item-action" href="/books/new">Add Book</a>
		<a class="list-group-item list-group-item-action" href="/books/newAuthor">Add Author</a>
		<a class="list-group-item list-group-item-action" href="/books/newPublisher">Add Publisher</a>
		</div>
	</div>
</div>

<% include partials/footer %>


