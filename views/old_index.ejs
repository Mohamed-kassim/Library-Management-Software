<% include partials/header %>
<h2>Welcome</h2>
<form action="/books/search" method="POST">
	<div class="input-group mb-3">
	  <input type="text" class="form-control" name="name" placeholder="Book name" aria-label="search">
	  <div class="input-group-append">
	    <button class="btn btn-outline-secondary" type="submit">Search</button>
	  </div>
	</div>
</form>	
<div class="row">
	<div class="col-9">

		<table class="table">
		  <thead class="thead-dark">
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Book</th>
		      <th scope="col">Author</th>
		      <th scope="col">Edition</th>
		      <th scope="col">Available</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% let x = 1; %>
			<% books.forEach(function(book){ %>
				<tr>
					<th scope="row"><%= x %></th>
					<td><%= book.name %></td>
					<td><%= authors[x-1] %></td>
					<td><%= book.edition %></td>
					<td><%= book.available %></td>
				</tr>
			<% x=x+1; }); %>
		  </tbody>
		</table>
		<hr>
	</div>
	<div class="col-3">
		<div class="list-group">
		<a class="list-group-item list-group-item-action" href="/books/new">Add Book</a>
		<a class="list-group-item list-group-item-action" href="/books/newAuthor">Add Author</a>
		<a class="list-group-item list-group-item-action" href="/books/newPublisher">Add Publisher</a>
		</div>
	</div>
</div>
<% include partials/footer %>